<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>GmailApp</title>
    <link rel="icon" type="image/x-icon" href="./images/gmaillogo.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  </head>
  <style>
    .container{
      margin-top: 3%;
    }
    .form-control{
      background-color: #ebebeb;
    }
  </style>
  <body>
    <div  class="container">
      <h1 class="mb-4">Register Here!</h1>
    <form action="/register" method="post">
    
      <div class="mb-3" >
        <label for="exampleInputEmail1" class="form-label">Name</label>
        <input style="background-color:#ebebeb;" name="name" type="text" class="form-control" id="exampleInputEmail1" >
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Username</label>
        <input autocomplete="off"  name="username" type="text" class="form-control" id="username">
        <label id="existUser" style="color: red; display: none;" > *Username has alredy taken*</label>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Email</label>
        <input name="email" type="email" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Mobile Number </label>
        <input name="mobile" type="text" class="form-control" id="exampleInputPassword1">
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Password</label>
        <input name="password" type="password" class="form-control" id="exampleInputPassword1">
      </div>
      
      <a class="text-decoration-none" href="/login">alredy have account !</a>
      <br>
      <button  type="submit" class="btn btn-primary mt-2">Submit</button>

    </form>
  </div>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script>
      document.querySelector("#username").addEventListener("input", function(){
        var that = this
       if(document.querySelector("#username").value.trim().length > 0){
        
         axios.get(`/check/${this.value}`)
         .then(function(data){
           if(data.data.index){
             document.querySelector("#existUser").style.display= "initial"
             that.style.borderColor = "red";
           } 
           
           else{
             console.log("user nhi hai")
             that.style.borderColor = "blue";
              document.querySelector("#existUser").style.display= "none"
           }
         })
       }
       else{
        that.style.borderColor = "initial";
        document.querySelector("#existUser").style.display= "none"
        
       }
      })
      
    </script>
  </body>
</html>